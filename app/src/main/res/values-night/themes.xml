<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Financas" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/principal</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/amaranth</item>

    </style>

    <style name="Theme.Financas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemaReceita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimaryDark">@color/receitacor</item>
        <item name="colorSecondary">@color/receitacor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/amaranth</item>

    </style>

    <style name="TemaDespesa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/despesacor</item>
        <item name="colorSecondary">@color/despesacor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/amaranth</item>


    </style>

    <style name="Theme.Financas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Financas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/financasappabertura</item>
    </style>
</resources>